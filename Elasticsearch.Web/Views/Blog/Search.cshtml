@model List<Elasticsearch.Web.ViewModels.BlogViewModel>
@{
    ViewData["Title"] = "Search";
}

<div class="container">
    <div class="col-md-10 offset-md-1">
        <form asp-controller="Blog" asp-action="Search">
            <div class="mb-3">
                <label>Search(Title ve Content)</label>
                <input name="searchText" class="form-control" value=@(TempData["searchText"]) />
            </div>
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
        @if (!Model.Any())
        {
            <div class="alert alert-info">Sonuç bulunamadı!</div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>UserId</th>
                        <th>Tags</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td>@blog.Id</td>
                            <td>@blog.Title</td>
                            <td>@blog.Content</td>
                            <td>@blog.UserId</td>
                            <td>
                            @foreach (var tag in blog.Tags)
                            {
                                <span class="badge bg-primary">@tag</span>
                            }
                            </td>
                            <td>@blog.CreatedDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

